<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:background="#404040"
        android:layout_width="match_parent" android:layout_height="match_parent" android:baselineAligned="false">

        <ImageView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/header"
                android:adjustViewBounds="true"
                />

        <LinearLayout
                android:background="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <Button
                        android:layout_gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="9sp"
                        style="@style/AboutButton"
                        android:textStyle="bold"
                        android:text="About"
                        android:background="#40FF40"
                        android:onClick="btnAbout"
                        android:layout_weight="1"/>

                <Button
                        android:layout_gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="9sp"
                        android:textStyle="bold"
                        style="@style/AboutButton"
                        android:background="#FF4040"
                        android:text="Stop"
                        android:onClick="btnStopSounds"
                        android:layout_weight="1"/>

        </LinearLayout>

        <android.support.v4.view.ViewPager
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".MainActivity">

                <android.support.v4.view.PagerTitleStrip
                        android:id="@+id/pager_title_strip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:background="#202020"
                        android:paddingBottom="4dp"
                        android:paddingTop="4dp"
                        android:textColor="#fff"/>

        </android.support.v4.view.ViewPager>
</LinearLayout>